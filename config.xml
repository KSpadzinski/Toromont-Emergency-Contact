        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.toromont.emergencycontact"
        version   = "1.1.0">
    <name>Contact</name>

    <description>
        Toromont emergency contact application
    </description>

    <author href="http://toromont.com" email="mobilesolutions@toromont.com">
        Toromont Mobile Dev Team
    </author>

    <access origin="*" />

    <preference name="phonegap-version" value="2.9.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="exit-on-suspend"  value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="prerendered-icon" value="true" />

    
    <icon src="content/images/icons/icon.png" />
    <gap:splash src="content/images/splash/splash.png" />
    <gap:splash src="content/images/splash/splash.png"    gap:platform="ios"     width="320" height="480" />
    <gap:splash src="content/images/splash/splash2x.png" gap:platform="ios"     width="640" height="960" />
    
